<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/information_name_hint" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/surnameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/information_surname_hint" />

    <EditText
        android:id="@+id/CFEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/information_CF_hint" />

    <EditText
        android:id="@+id/anniEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/information_anni_hint" />

    <EditText
        android:id="@+id/telephoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/information_telephone_hint"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <EditText
        android:id="@+id/contact1EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/information_contact1_hint" />

    <EditText
        android:id="@+id/contact2EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/information_contact2_hint" />



</LinearLayout>