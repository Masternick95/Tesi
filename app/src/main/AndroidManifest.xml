    package="com.example.nick.myemergency">

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.nick.myemergency.InformationActivity"/>
        <activity android:name="com.example.nick.myemergency.FistLaunch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.nick.myemergency.AddEditActivity" />
        <activity android:name="com.example.nick.myemergency.ProblemsActivity"/>
        <activity
            android:name="com.example.nick.myemergency.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
